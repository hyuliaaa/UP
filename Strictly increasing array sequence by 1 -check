#include <iostream>

using namespace std;
const int SZ=100;

bool isIncreasing(int arr[], int n)

{
        for (int i=0; i<n-1; i++)
        {
            if(arr[i]+1==arr[i+1])
            {

            }
            else
            {
                return false;
            }

        }
        return true;
}
int main()
{

    int n;
    cin>>n;
    int arr[SZ];


    for (int i=0; i<n ; i++)
    {
        cin>>arr[i];
    }


    cout<<isIncreasing(arr,n);




    return 0;
}
