#include<iostream>
#include <cmath>

using namespace std;

const int SZ=100;

bool isSymetric(int arr[], int n)
{
    for(int i=0; i<n/2; i++)
    {
        if(arr[i]!=arr[n-i-1])
        {
            return false;
        }
    }
    return true;
}


int main()
{

    int arr[SZ];
    int n;
    cin>>n;
    for(int i=0; i<n ; i++)
    {
        cin>>arr[i];
    }
    cout<<isSymetric(arr,n);

















    return 0;
}




